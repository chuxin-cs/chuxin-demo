{
  "name": "demo-electron",
  "private": true,
  "version": "0.0.0",
  "main": "./electron/main.js",
  "homepage": "www.dongyuanwai.cn",
  "author": {
    "name": "dongyuanwai",
    "email": "yuanwaidong@163.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.4.37"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.2",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "electron-devtools-installer": "^3.2.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-electron": "^0.28.7",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": ">=20.16.0"
  },
  "build": {
    "productName": "DemoElectron",
    "appId": "dyy.dongyuanwai",
    "copyright": "dyy.dongyuanwai Â© 2024",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release/"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DemoElectron"
    },
    "win": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    },
    "linux": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    }
  }
}
